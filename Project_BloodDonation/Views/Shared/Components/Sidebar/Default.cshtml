@model Member
<li class="nav-item dropdown pe-3 text-capitalize">
   <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
      @if (Model.ImageName != null)
      {
      <img src="@("~/image/"+Model.ImageName)" class="rounded-circle" asp-append-version="true" width="40px" height="40px">
      }
   </a>
   <!-- End Profile Iamge Icon -->

   <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile text-capitalize">
      <li class="dropdown-header text-center">
         @if (Model  != null)
         {
         <h6>@Model.FirstName</h6>
         <span>@Model.Role</span>
         }
      </li>
      <li>
         <hr class="dropdown-divider">
      </li>

      <li>
         <a asp-controller="Profile" asp-action="Myprofile" class="dropdown-item d-flex align-items-center">
            <i class="bi bi-person"></i>
            <span>My Profile</span>
         </a>
      </li>
 <li>
         <hr class="dropdown-divider">
      </li>
   @*   <li>
         <hr class="dropdown-divider">
      </li>  *@  
      <li>

            <form class="form-inline dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark"><i class="fa-solid fa-arrow-right-from-bracket"></i> Sign out</button>
            </form>
      </li>
   </ul>
   <!-- End Profile Dropdown Items -->
</li>

<!-- End Profile Nav -->

