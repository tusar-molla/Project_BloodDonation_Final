                        </div>

                        <div class="row">
                                    <div class="col-lg-3 col-md-4 label">@Html.DisplayNameFor(model=> model.Age)</div>
                           <div class="col-lg-9 col-md-8">@Model.Age</div>
                        </div>

                        <div class="row">
                                    <div class="col-lg-3 col-md-4 label">@Html.DisplayNameFor(model=> model.NID)</div>
                           <div class="col-lg-9 col-md-8">@Model.NID</div>
                        </div>

                        <div class="row">
                                    <div class="col-lg-3 col-md-4 label">@Html.DisplayNameFor(model=> model.SmartCard)</div>
                           <div class="col-lg-9 col-md-8">@Model.SmartCard</div>
                        </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">@Html.DisplayNameFor(model=> model.RegistrationDate)</div>
                                    <div class="col-lg-9 col-md-8">@Model.RegistrationDate</div>
                                </div>

                                <div class="row">
