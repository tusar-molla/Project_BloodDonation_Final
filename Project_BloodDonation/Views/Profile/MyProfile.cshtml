                              @await Component.InvokeAsync("Doctorinfo",
                           new {  memberId = Model.Id  }
                           )
                           }

                           @if (User.IsInRole("Donor"))
                           {
                                    <h4 class="card-title">Your Particulars Information</h4>
                              <a asp-controller="MembersDeseases" asp-action="Create">Add Disease</a>
